// File: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  hashedPassword String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Image {
  id          String   @id @default(cuid())
  src         String
  alt         String?
  title       String?
  description String?
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TextPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String?
  content     String
  category    String?
  imageUrl    String?
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MusicTrack {
  id          String   @id @default(cuid())
  title       String
  description String
  type        String // "Beat", "Freestyle", or "Track"
  duration    String
  audioSrc    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Appointment {
  id           String   @id @default(cuid())
  dateTime     DateTime @unique
  serviceName  String
  servicePrice Int
  clientName   String
  clientEmail  String
  clientNotes  String?
  createdAt    DateTime @default(now())
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String
  duration    String
  price       Int
  popular     Boolean  @default(false)
  icon        String   @default("Heart")
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSettings {
  id                   String   @id @default(cuid())
  showMusicSection     Boolean  @default(true)
  showSpiritualSection Boolean  @default(true)
  showTextSection      Boolean  @default(true)
  showPictureSection   Boolean  @default(true)
  backgroundImageUrl   String?
  updatedAt            DateTime @updatedAt
}

model ContentBlock {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id            String   @id @default(cuid())
  title         String
  description   String
  coverImageUrl String? // MODIFICATION: Added cover image
  isPremium     Boolean  @default(false)
  price         Int?
  unlockCode    String?
  videos        CourseVideo[] // MODIFICATION: Relation to multiple videos
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// NEW: Model for Course Videos
model CourseVideo {
  id        String   @id @default(cuid())
  title     String
  videoSrc  String
  order     Int      // To maintain video order
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}